# config file locate
DBX_CONFIG="/home/my_user/.dbxbin/config"

# dropbox sync root
DBX_ROOT="/cygdrive/c/Users/my_user/Dropbox/Sync/Shell"

# original dbxbin location
DBX_EXE_SRC_DIR="/cygdrive/c/Users/my_user/Dropbox/Sync/Shell/bin"

# primary user name
USER_NAME=my_user

# directory for RC files for the primary user
USER_RC=/home/my_user

# directory for scripts for the primary user
USER_BIN=/home/my_user/.bin

# directory for RC files for root
ROOT_RC=/root

# directory for system-wide user scripts
LOCAL_BIN=/usr/local/bin

# directory for system-wide root scripts
LOCAL_SBIN=/usr/local/sbin

# entries to ignore on this machine
#IGNORE=entry1 entry2



### Windows specific
# windows home folder
WINUSER_RC='/cygdrive/c/Users/my_user'

# directory for windows app data"
APP_DATA='/cygdrive/c/Users/my_user/AppData/Roaming'

# steam path"
STEAM_PATH='/cygdrive/c/Program Files/Steam'



### Linux specific
# steam path
STEAM_PATH='/home/my_user/.steam/steam'
